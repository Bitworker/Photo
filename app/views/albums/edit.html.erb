<h1>Album Bearbeiten</h1>
 
<%= form_for @album do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Speichern" %>
<% end %>
 
<%= content_for :action_links do %>
<% if has_role?("admin") %>

<%= link_to("Album Löschen", { :action => "destroy", :id => @album, :collection_id => params[:collection_id] },
  :confirm => "Bist du sicher das du dieses Album löschen möchtest?",
  :method => :delete) %>
<% end %>
<% end %>
