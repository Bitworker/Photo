<h1>Account bearbeiten</h1>
 
<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Speichern" %>
<% end %>

<%= content_for :action_links do %>
<%= link_to("Benutzer löschen", { :action => "destroy", :id => @user },
	  :confirm => "Bist du sicher das du diesen Benutzer löschen möchtest?",
	  :method => :delete) %>
<% end %>
